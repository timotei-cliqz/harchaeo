build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  ghc-options:         -Wall
  exposed-modules:     Lib
                     , Types.Channel
                     , Types.Message
                     , Types.User
                     , Api
  other-modules:       Archive
  build-depends:       base >= 4.7 && < 5
                     , aeson
                     , bytestring
                     , containers
                     , directory
                     , elm-export
                     , filepath
                     , servant
                     , servant-server
                     , text
                     , transformers
                     , wai
                     , warp
  default-language:    Haskell2010

executable codegen
  hs-source-dirs:      app
  main-is:             CodeGenerator.hs
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , harchaeo
                     , elm-export
                     , servant-elm
                     , servant-server
                     , text
  default-language:    Haskell2010

executable backend
  hs-source-dirs:      app
  main-is:             Backend.hs
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , harchaeo
  default-language:    Haskell2010

test-suite harchaeo-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , harchaeo
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/remusao/harchaeo
